<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hsl.android.qianfeng.advancedcourse.MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--app:tabIndicatorColor="@color/white"                 // 下方滚动的下划线颜色-->
    <!--app:tabSelectedTextColor="@color/gray"               // tab被选中后，文字的颜色-->
    <!--app:tabTextColor="@color/white"                      // tab默认的文字颜色-->

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d7d1d1"
        android:padding="5dp">

        <android.support.design.widget.TabLayout
            android:id="@+id/tablyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="#e21919"
            app:tabSelectedTextColor="#351919"
            app:tabTextColor="#dc510b"
            android:layout_toLeftOf="@+id/image_next"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/image_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_usercenter_bbs_hl"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel"/>
</RelativeLayout>
